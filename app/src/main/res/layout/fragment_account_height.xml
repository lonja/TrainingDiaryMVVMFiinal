<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="su.dreamteam.lonja.trainingdiaryfinal.viewmodel.AccountWizardViewModel" />

    </data>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/height_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_done_white_24px"
            app:layout_constraintBottom_toBottomOf="@+id/constraint_layout"
            app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
            app:layout_constraintRight_toRightOf="@+id/constraint_layout"
            app:layout_constraintTop_toTopOf="@+id/constraint_layout" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/height_edit_wrapper"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:hint="@string/height"
            app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
            app:layout_constraintRight_toRightOf="@+id/constraint_layout"
            app:layout_constraintTop_toBottomOf="@+id/height_image">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/height_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:onTextChanged="@{viewModel.heightChanged}"
                android:text="@={viewModel.account.height}" />

        </android.support.design.widget.TextInputLayout>

    </android.support.constraint.ConstraintLayout>

</layout>